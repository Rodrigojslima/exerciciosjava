package application;

import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

public class Program {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		List<Integer> list = new ArrayList<>();
		System.out.println("Enter number elements: ");
		Integer n = sc.nextInt();		
		
		for(int i = 0; i < n; i++) {
			System.out.println("Enter number in position: " + i);
			int number = sc.nextInt();
			list.add(i, number);
			}
		
		System.out.println();
		System.out.println("LIST: ");
		for(int x: list) {
			System.out.print(x);
		}
		System.out.println();
		System.out.println("Add or remove numbers to the list? ");
		System.out.println("Yes insert 1 / Not insert 0");
		int y = sc.nextInt();
		
		while(y == 1) {
		System.out.println("Add frist position: ");
		int position = sc.nextInt();
		System.out.println("Now add number: ");
		int number = sc.nextInt();
		list.set(position, number);
		System.out.println("Yes insert 1 / Not insert 0");
		y = sc.nextInt();
		}

		for(int x: list) {
			System.out.println(x);
		}
		
	}

}
