package entitis;

public class Student {
	
	public String nome;
	public double nota1;
	public double nota2;
	public double nota3;
	public String resultFinal;
	
	public double finalGrade() {
		return nota1 + nota2 + nota3;
	
	}
	
	public void result() {
		if(finalGrade() < 60) {
			resultFinal = "FAILED";
		}else {
			resultFinal = "PASS";
		}		
	}
	
	public double missing() {
		if(finalGrade() < 60) {
			return 60.00 - finalGrade();
		} else {
			return 0.0;
		} 
			
		}
			

}

